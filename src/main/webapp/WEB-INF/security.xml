<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                 http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                 http://www.springframework.org/schema/security
                 http://www.springframework.org/schema/security/spring-security-3.2.xsd">


    <http access-denied-page="/error403.jsp" auto-config="true" use-expressions="true">
        <intercept-url pattern="/account/*" access="USER"/>
        <intercept-url pattern="/admin/*" access="ADMIN"/>
        <form-login login-page="/login.jsp" default-target-url="/index" authentication-failure-url="/login.jsp?error=true"/>
        <logout logout-url="/logout" logout-success-url="/index"/>
        <anonymous username="guest" granted-authority="ANONYMOUS"/>
        <remember-me user-service-ref="accountManager"/>
    </http>

    <authentication-manager>
        <authentication-provider user-service-ref="accountManager">
            <password-encoder hash="sha-256">
                <salt-source user-property="username"/>
            </password-encoder>
        </authentication-provider>
    </authentication-manager>

    <global-method-security secured-annotations="enabled" />
</beans:beans>