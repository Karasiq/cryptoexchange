<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                 http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                 http://www.springframework.org/schema/security
                 http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <authentication-manager alias="authenticationManager" >
        <authentication-provider user-service-ref="accountManager">
            <password-encoder hash="sha-256">
                <salt-source user-property="username"/>
            </password-encoder>
        </authentication-provider>
    </authentication-manager>

    <http access-denied-page="/static/403.html">
        <intercept-url pattern="/admin/*" access="ROLE_ADMIN"/>
        <form-login />
        <logout />
        <remember-me user-service-ref="accountManager"/>
        <anonymous username="anonymousUser" granted-authority="ROLE_ANONYMOUS"/>
        <form-login login-page="/login" authentication-failure-url="/"
                    default-target-url="/"
                    always-use-default-target="true"/>
        <logout invalidate-session="true" logout-success-url="/" logout-url="/security/logout"/>
    </http>



    <global-method-security secured-annotations="enabled" proxy-target-class="true" />
</beans:beans>